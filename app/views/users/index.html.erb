<div class="users-list">
  <h2>A list of users</h2>
  <%= link_to 'Add a new User', new_user_path, class: "button" %>

  <table class="users-list-table">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="2"></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
    <% end %>
  </table>
</div>
